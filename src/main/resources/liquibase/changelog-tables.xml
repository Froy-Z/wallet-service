<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">


    <!-- Таблица players -->
    <changeSet id="6" author="Froy-Z">
        <createTable tableName="players" schemaName="ylab_schema">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('ylab_schema.players_id_seq')">
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <!-- Таблица accounts -->
    <changeSet id="7" author="Froy-Z">
        <createTable tableName="accounts" schemaName="ylab_schema">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('ylab_schema.accounts_id_seq')">
                <constraints primaryKey="true"/>
            </column>
            <column name="player_id" type="BIGINT">
                <constraints foreignKeyName="player_id"
                             referencedTableSchemaName="ylab_schema"
                             referencedTableName="players"
                             referencedColumnNames="id"/>
            </column>
            <column name="balance" type="DECIMAL(14,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <!-- Таблица loggingies -->
    <changeSet id="8" author="Froy-Z">
        <createTable tableName="loggingies" schemaName="ylab_schema">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('ylab_schema.loggingies_id_seq')">
                <constraints primaryKey="true"/>
            </column>
            <column name="player_id" type="BIGINT">
                <constraints foreignKeyName="player_id"
                             referencedTableSchemaName="ylab_schema"
                             referencedTableName="players"
                             referencedColumnNames="id"/>
            </column>
            <column name="execution_time" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <!-- Таблица transactions -->
    <changeSet id="9" author="Froy-Z">
        <createTable tableName="transactions" schemaName="ylab_schema">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('ylab_schema.transactions_id_seq')">
                <constraints primaryKey="true"/>
            </column>
            <column name="player_id" type="BIGINT">
                <constraints foreignKeyName="player_id"
                             referencedTableSchemaName="ylab_schema"
                             referencedTableName="players"
                             referencedColumnNames="id"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints foreignKeyName="account_id"
                             referencedTableSchemaName="ylab_schema"
                             referencedTableName="accounts"
                             referencedColumnNames="id"/>
            </column>
            <column name="transaction_uuid" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="execution_time" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(14,2)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
